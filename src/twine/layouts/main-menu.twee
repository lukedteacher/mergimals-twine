:: main menu [nobr]

Choose player: 
<<listbox '_selectedPlayer'>>
  <<optionsfrom $players>>
<</listbox>><br /><br />
Choose character: 
<<do tag 'character-selector'>>
    <<if Object.keys(_selectedPlayer.characters) == 0>>
        <<listbox '_selectedCharacter'>>
            <<option 'none'>>
        <</listbox>>
    <<else>>
        <<listbox '_selectedCharacter'>>
            <<optionsfrom $players[_selectedPlayer.name].characters>>
        <</listbox>>
    <</if>>
    <<button '+' 'character creation'>>
        <<set $activePlayer = _selectedPlayer>>
    <</button>><br /><br />
<</do>><<button 'CONTINUE'>>
    <<set $activePlayer = _selectedPlayer>>
    <<set $activeCharacter = _selectedCharacter>>
    <<if _selectedCharacter == 'none'>>
        <<dialog 'error'>>
            create a character first!<br /><br />
            <<button 'whoops'>>
                <<run Dialog.close()>>
            <</button>>
        <</dialog>>
    <<elseif $activeCharacter.lastPassage == ''>>
        <<dialog 'error'>>
            you haven't explored anything yet.<br /><br />
            <<button 'whoops'>>
                <<run Dialog.close()>>
            <</button>>
        <</dialog>>
    <<else>>
        <<goto $activePlayer.lastPassage>>
    <</if>>
<</button>>
<<button 'NEW GAME'>>
    <<if _selectedCharacter == 'none'>>
        <<dialog 'error'>>
            create a character first!<br /><br />
            <<button 'whoops'>>
                <<run Dialog.close()>>
            <</button>>
        <</dialog>>
    <<else>>
        <<set $activePlayer = _selectedPlayer>>
        <<set $activeCharacter = _selectedCharacter>>
        <<goto 'intro'>>
    <</if>>
<</button>>

<<done>>
    <<script>>
        $('#listbox--selectedplayer').on('change', function () {
            $(document).trigger({
                type   : ':redo',
                detail : { tags : [ 'character-selector' ] }
            });
        });
    <</script>>
<</done>>

