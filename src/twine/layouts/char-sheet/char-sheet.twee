:: character sheet [nobr]
<div>Player Name: $player.player</div><div>Character Name: $player.name</div>
<<script>>
	$( function() {
		$( "#tabs" ).tabs({
			classes: {
				'ui-tabs': 'char-sheet-tabs'
			}
		});
	} );
<</script>>
<div id='tabs' class='dialog-char-sheet-tabs'>
	<ul>
		<li><h2 style='margin: 0;'><a href='#dialog-char-sheet--character'>👤 character</a></h2></li>
		<li><h2 style='margin: 0;'><a href='#dialog-char-sheet--backpack'>🎒 backpack</a></h2></li>
		<li><h2 style='margin: 0;'><a href='#dialog-char-sheet--mergipedia'>📘 mergipedia</a></h2></li>
	</ul>
	<div id='dialog-char-sheet--character'>
		<<include 'stats'>>
		<<include 'injuries'>>
	</div>
	<div id='dialog-char-sheet--backpack'>
		<<include 'backpack items'>>
		<<include 'backpack keywords'>>
	</div>
	<div id='dialog-char-sheet--mergipedia'>
		<<include 'mergipedia'>>		
	</div>
</div>